---
import BaseHead from "../components/base-head.astro";
import Navbar from "../components/navbar.astro";

type Props = {
  title: string;
  description: string;
  class?: string;
  image?: string;
};

const { title, description, class: className, image } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} image={image} />
  </head>
  <body class="mx-auto max-w-4xl px-4 sm:px-6 md:px-8">
    <Navbar />
    <main class={className}>
      <slot />
    </main>
  </body>
</html>
