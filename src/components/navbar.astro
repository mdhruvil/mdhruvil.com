<header>
  <nav class="mt-8 space-x-4 text-sm">
    <a href="/" class="hover:text-accent transition-colors duration-200">
      <span class="text-accent">[h]</span> home
    </a>
    <a href="/blog" class="hover:text-accent transition-colors duration-200">
      <span class="text-accent">[b]</span>
      blog
    </a>
    <a
      href="/projects"
      class="hover:text-accent transition-colors duration-200"
    >
      <span class="text-accent">[p]</span>
      projects
    </a>
    <a
      href="https://docs.google.com/document/d/1tDJ9bKlYkeekRE0KtiqJWGPXz3gQl5LFuLADH3j4BwU/edit?usp=sharing"
      target="_blank"
      class="hover:text-accent transition-colors duration-200"
    >
      <span class="text-accent">[r]</span>
      resume
    </a>
  </nav>
</header>

<script>
  document.addEventListener("keydown", (event) => {
    const activeElement = document.activeElement;
    const isInputField =
      activeElement?.tagName === "INPUT" ||
      activeElement?.tagName === "TEXTAREA";

    if (!isInputField) {
      if (event.key === "h") {
        window.location.href = "/";
      } else if (event.key === "b") {
        window.location.href = "/blog";
      } else if (event.key === "p") {
        window.location.href = "/projects";
      } else if (event.key === "r") {
        window.open(
          "https://docs.google.com/document/d/1tDJ9bKlYkeekRE0KtiqJWGPXz3gQl5LFuLADH3j4BwU/edit?usp=sharing",
          "_blank",
        );
      }
    }
  });
</script>
