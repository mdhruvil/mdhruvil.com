<header>
  <nav class="mt-8 mb-12 space-x-4 text-sm">
    <a href="/" class="hover:text-accent transition-colors duration-200">
      [h] home
    </a>
    <a href="/blog" class="hover:text-accent transition-colors duration-200">
      [b] blog
    </a>
    <a
      href="/projects"
      class="hover:text-accent transition-colors duration-200"
    >
      [p] projects
    </a>
  </nav>
</header>

<script>
  document.addEventListener("keydown", (event) => {
    const activeElement = document.activeElement;
    const isInputField =
      activeElement?.tagName === "INPUT" ||
      activeElement?.tagName === "TEXTAREA";

    if (!isInputField) {
      if (event.key === "h") {
        window.location.href = "/";
      } else if (event.key === "b") {
        window.location.href = "/blog";
      } else if (event.key === "p") {
        window.location.href = "/projects";
      }
    }
  });
</script>
