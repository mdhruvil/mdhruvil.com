---
import type { Project } from "../consts";

type Props = Project;

const { name, liveLink, repoLink, description, techStack } = Astro.props;
---

<div
  class="group hover:border-accent/50 border border-gray-800 p-6 transition-colors"
>
  <a href={repoLink} target="_blank" rel="noopener noreferrer">
    <div class="mb-4 flex items-start justify-between">
      <h2
        class="group-hover:text-accent text-2xl font-bold text-white transition-colors"
      >
        {name}
      </h2>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="group-hover:text-accent h-5 w-5 text-gray-400 transition-colors"
        ><path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"
        ></path><path
          d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"
        ></path></svg
      >
    </div>

    <p class="mb-6 text-gray-300">{description}</p>

    <div>
      <h3 class="mb-2 font-semibold text-white">technologies</h3>
      <div class="flex flex-wrap gap-2">
        {
          techStack.map((tech) => (
            <span class="rounded bg-gray-800/50 px-2 py-1 text-sm text-gray-300">
              {tech.toLowerCase()}
            </span>
          ))
        }
      </div>
    </div>
  </a>
</div>
